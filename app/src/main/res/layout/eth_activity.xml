<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#87ceeb"
    tools:context="com.eta.convertcurrency.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/eth_card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:elevation="4dp"
        app:cardElevation="8dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Ethereum"
                android:textSize="20sp"
                android:layout_weight="1"
                android:id="@+id/ETH"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:layout_weight="1"
                android:id="@+id/single_eth_dollar_value"
                android:layout_marginLeft="80dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/info"
        android:layout_margin="5dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:textAlignment="center"
        android:textAllCaps="true"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:id="@+id/get_edittexte"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:id="@+id/eth_spinner"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>


        </LinearLayout>



    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:id="@+id/conversion_outpute"
        android:textSize="30sp"
        android:layout_margin="70dp"/>
</LinearLayout>
